<?xml version="1.0" encoding="UTF-8"?>
<site site="http://watch.discoverychannel.ca"
	    plugin="http://watch.discoverychannel.ca/Flash/player.swf.*"
			initialState="playing"
			version="1.0">
			
	<crop x="0" y="0" width="646" height="356" />


	<seekbar type="simple">
		<start x="4" y="330" />
		<end   x="640" y="330" />
		<played>
			<color rgb="5E0C01" />
		</played>
	</seekbar>

	<!-- PLAYING -->
	<state name="playing">
		
		<!-- Click to pause -->
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="22" y="350" />
			</action>
		</event>
		
	</state>
	
	<!-- PAUSED -->
	<state name="paused">
		
		<!-- Wait for play command -->
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="22" y="350" />
			</action>
		</event>
		
	</state>
</site>
